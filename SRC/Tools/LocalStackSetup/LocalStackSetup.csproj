<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Warehouse.Tools.LocalStackSetup</AssemblyName>
    <RootNamespace>Warehouse.Tools.LocalStackSetup</RootNamespace>
    <OutputType>Exe</OutputType>
    <Configurations>Debug</Configurations>
    <OutputPath>..\..\..\BIN\$(Configuration)</OutputPath>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".dockerignore" />
    <None Remove="dockerfile" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.SecretsManager" Version="3.7.400.58" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Cert\certificate.crt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Cert\private.key">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
